include b_calendar
include b_settings_bubble

mixin navigation_top_calendar(prevdata, currentdata, nextdata, title)
    .navbar-header.clearfix
         button.fll.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
         a.fll.navbar_cal_left.navbar_cal-arrows
             i(class="icon arrow-left_lg")
             span.navbar_cal_data.navbar_cal_prev-data #{prevdata}
         .fll.navbar_cal_center
             h2
                a.open-calendar #{title}
             h3
                a.open-calendar.navbar_cal_current-data #{currentdata}
                a(href="#" class="navbar_calendar_link open-calendar")
                    i(class="icon calendar")
                +b_calendar('may', 'jun', 'apr', 'May', 'Jun', 'Apr', 'display:none')
         a.flr.navbar_cal_settings(href="#")
             i(class="icon settings")
             +b_settings_bubble
         a.flr.navbar_cal_right.navbar_cal-arrows
             span.navbar_cal_data.navbar_cal_next-data #{nextdata}
             i(class="icon arrow-right_lg")