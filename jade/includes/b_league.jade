mixin b_league(class1, imglink, leaguename, leaguelink, bell)
    div(class="b_league #{class1}")
        a(href="#" class="b_all-link")
        .clearfix.b_trim
            if bell
                .fll.b_league_bell
                    a(href="#")
                        i(class="icon #{bell}")
            .fll.b_league_logo
                 a(href="#{leaguelink}" )
                       if imglink
                            <img src="files/#{imglink}" />
            .fll.b_league_name.b_trim_inner
                 a(href="#{leaguelink}") #{leaguename}
            .flr.b_row_left-link.-mod3
                 a(href="#{leaguelink}")
                       if class1 == '-low -blue-bg'
                             i.icon.arrow-right_lg
                       else
                             i.icon.arrow-right_gray
                        