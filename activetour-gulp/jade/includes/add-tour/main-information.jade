    .label_md-wrapper.col-md-3
      label.label_md.-simple Регион тура
    .col-md-3
      include ../general/where-input
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Вид тура
    .col-md-3
      include ../general/what-input
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Сложность
