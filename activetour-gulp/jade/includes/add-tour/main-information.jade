section.add-section.search-form
  include ../home/select-region
  include ../home/select-type
  .allocated-block
    h2.add-subtitle 1. Основная информация о туре
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Название тура
    .col-md-9
      input.g_input
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Главная картинка для тура
    .col-md-3
      input.g_input
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Цена
    .col-md-3
      input.g_input
    .label_md-wrapper.col-md-3.count-changer
      label.label_md.-simple.js-active(for="rub")
        span рублей
        input(type="radio", id="rub" name="countchanger")
      label.label_md.-simple.hide(for="usd")
        span долларов
        input(type="radio",id="usd", name="countchanger")
      label.label_md.-simple.hide(for="euro")
        span евро
        input(type="radio", id="euro", name="countchanger")
