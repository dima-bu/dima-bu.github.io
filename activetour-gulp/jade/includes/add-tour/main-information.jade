      select.g_select
        option Сложность 1
        option Сложность 2
        option Сложность 3
        option Сложность 4
        option Сложность 5
        option Сложность 6
  .form-row
    .label_md-wrapper.col-md-3
      label.label_md.-simple Выбрать гида
    .col-md-4
      select.g_select
        option Кондрашев А.Б.
        option Безпалапенковинковенко А.П.
        option Бухал Д.Д.
        option Титарев М.И.
        option Селиванов А.Ф.
     .col-md-3


